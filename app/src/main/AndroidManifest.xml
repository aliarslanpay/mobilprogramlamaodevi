<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tr.edu.yildiz.aliarslanpay">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobilOdevi">
        <activity android:name=".CreateExamActivity"
            android:launchMode="singleTask"></activity>
        <activity android:name=".ExamSettingsActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".MenuActivity"/>
        <activity android:name=".QuestionListActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".MenuActivity" />
        <activity android:name=".AddQuestionActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".MenuActivity" />
        <activity android:name=".MenuActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".RegisterActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".LoginActivity" />
        <activity android:name=".LoginActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>/
        </activity>
    </application>

</manifest>